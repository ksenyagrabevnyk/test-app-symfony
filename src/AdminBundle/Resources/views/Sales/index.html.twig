                                    {#<th>Кол-во товаров в чеке</th>#}
                                {#</tr>#}
                                {#</tr>#}
                            {#</tfoot>#}
                        </table>
                        {#{{ knp_pagination_render(entities) }}#}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
